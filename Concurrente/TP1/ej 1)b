programa Tp1ej1 
procesos
  proceso juntar (ES flor: numero; ES cantEsq: numero)
  comenzar
    si(HayFlorEnLaEsquina)
      mientras (HayFlorEnLaEsquina) 
        tomarFlor
        flor:= flor + 1
    sino
      cantEsq:= cantEsq + 1
  fin
  proceso recorrerAvenida(ES flor: numero; ES cantEsq: numero)
  comenzar
    repetir 99
      juntar(flor, cantEsq)
      mover 
    juntar (flor, cantEsq) 
  fin  
areas
  ciudad1: AreaP(1,1,1,100)
  ciudad2: AreaP(3,1,3,100)
  ciudad3: AreaP(5,1,5,100)    
robots
  robot tipo1
  variables
    cantFlor: numero
    cantEsq: numero
  comenzar
    recorrerAvenida(cantFlor, cantEsq)
    Informar (cantFlor)
    Informar (cantEsq) 
  fin  
variables
  robot1: tipo1
  robot2: tipo1
  robot3: tipo1
comenzar
  AsignarArea(robot1,ciudad1)
  AsignarArea(robot2,ciudad2)
  AsignarArea(robot3,ciudad3)
  Iniciar(robot1, 1, 1)
  Iniciar(robot2, 3, 1)
  Iniciar(robot3, 5, 1)
fin
