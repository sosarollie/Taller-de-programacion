programa tp1ej2
procesos
  proceso juntar(ES cantFlor: numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      cantFlor:= cantFlor + 1
  fin
  proceso recorrer(ES cantFlor: numero)
  comenzar
    cantFlor:= 0
    juntar(cantFlor)
    repetir 98
      mover
      juntar(cantFlor)  
  fin
areas
  ciudad1: AreaP(1,1,1,99)
  ciudad2: AreaP(1,100,99,100)
  ciudad3: AreaP(100,2,100,100)
  ciudad4: AreaP(2,1,100,1)
robots
  robot tipo1
  variables
    cantFlor: numero
  comenzar
    recorrer(cantFlor)
    Informar(cantFlor)
  fin
  
  robot tipo2
  variables
    cantFlor: numero
  comenzar
    derecha
    recorrer(cantFlor)
    Informar(cantFlor)
  fin
  
  robot tipo3
  variables
    cantFlor: numero
  comenzar
    repetir 2
      derecha
    recorrer(cantFlor)
    Informar(cantFlor)
  fin
  
  robot tipo4
  variables
    cantFlor: numero
  comenzar
    repetir 3
      derecha
    recorrer(cantFlor)
    Informar(cantFlor)
  fin
variables
  r1: tipo1
  r2: tipo2
  r3: tipo3
  r4: tipo4
comenzar
  AsignarArea(r1,ciudad1)
  AsignarArea(r2,ciudad2)
  AsignarArea(r3,ciudad3)
  AsignarArea(r4,ciudad4)
  Iniciar(r1,1,1)
  Iniciar(r2,1,100)
  Iniciar(r3,100,100)
  Iniciar(r4,100,1)
fin
    
  